# ============================================
# OSINT Tracker 环境变量配置
# ============================================

# ============================================
# 基础配置
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# 数据库配置
# ============================================
# SQLite (默认)
DATABASE_URL=sqlite:///./osint_tracker.db

# MongoDB
MONGO_URL=mongodb://mongodb:27017
DB_NAME=jackma_db

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ============================================
# 认证配置
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
DEFAULT_PASSWORD=default-user-password
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================
# CORS 配置
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:80,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000,http://frontend:80,http://127.0.0.1:3000

# ============================================
# 超时配置 (秒)
# ============================================
DEFAULT_TIMEOUT=15
LONG_TIMEOUT=30
OSINT_INDUSTRIES_TIMEOUT=110

# ============================================
# 外部 API 密钥 - 核心服务
# ============================================

# RapidAPI (主密钥 - 用于多个服务)
RAPIDAPI_KEY=your-rapidapi-key

# OSINT Industries API
OSINT_INDUSTRIES_API_KEY=your-osint-industries-api-key

# Have I Been Pwned (HIBP) API
HIBP_API_KEY=your-hibp-api-key

# ============================================
# 外部 API 密钥 - 电话查询服务
# ============================================

# Truecaller API (通过 RapidAPI)
TRUECALLER_RAPIDAPI_KEY=your-truecaller-rapidapi-key

# Caller ID API (通过 RapidAPI)
CALLER_ID_RAPIDAPI_KEY=your-caller-id-rapidapi-key

# IPQualityScore API
IPQS_API_KEY=your-ipqs-api-key

# Melissa API (电话验证)
MELISSA_API_KEY=your-melissa-api-key

# AceLogic API
ACELOGIC_API_KEY=your-acelogic-api-key

# ============================================
# 外部 API 密钥 - 社交媒体服务
# ============================================

# WhatsApp API
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_RAPIDAPI_KEY=your-whatsapp-rapidapi-key

# Telegram API
TELEGRAM_PHONE_API_URL=http://47.253.47.192:8084/query-phone

# ============================================
# 外部 API 密钥 - 邮箱服务
# ============================================

# Google Email API
GOOGLE_EMAIL_API_URL=http://47.253.47.192:8002/api/email

# ============================================
# 外部 API 端点 (印尼服务)
