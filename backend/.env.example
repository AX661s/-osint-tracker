# ============================================
# OSINT Tracker 后端环境变量配置
# 请复制此文件为 .env 并填入实际的 API 密钥
# ============================================

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=sqlite:///./osint_tracker.db
MONGO_URL=mongodb://localhost:27017
DB_NAME=jackma_db

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ============================================
# 认证配置
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
DEFAULT_PASSWORD=password
JWT_SECRET=your-super-secret-jwt-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# ============================================
# CORS 配置
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3005,http://localhost:3006,http://localhost:8000,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3005,http://localhost:3006,http://localhost:8000,http://127.0.0.1:3000

# ============================================
# 超时配置 (秒)
# ============================================
DEFAULT_TIMEOUT=15
LONG_TIMEOUT=30
OSINT_INDUSTRIES_TIMEOUT=110

# ============================================
# 外部 API 密钥 - 核心服务
# ============================================

# RapidAPI 主密钥 (用于 Truecaller, Caller ID 等多个服务)
# 获取地址: https://rapidapi.com/
RAPIDAPI_KEY=

# OSINT Industries API
# 获取地址: https://osint.industries/
OSINT_INDUSTRIES_API_KEY=

# Have I Been Pwned (HIBP) API - 数据泄露查询
# 获取地址: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=

# ============================================
# 外部 API 密钥 - 电话查询服务
# ============================================

# Truecaller API (通过 RapidAPI)
# 如果为空，将使用 RAPIDAPI_KEY
TRUECALLER_RAPIDAPI_KEY=

# Caller ID API (通过 RapidAPI)
# 如果为空，将使用 RAPIDAPI_KEY
CALLER_ID_RAPIDAPI_KEY=

# IPQualityScore API - 电话/IP/邮箱风险评估
# 获取地址: https://www.ipqualityscore.com/
IPQS_API_KEY=

# Melissa API - 电话验证服务
# 获取地址: https://www.melissa.com/
MELISSA_API_KEY=

# AceLogic API
ACELOGIC_API_KEY=

# ============================================
# 外部 API 密钥 - 社交媒体服务
# ============================================

# WhatsApp 查询 API
WHATSAPP_API_KEY=
WHATSAPP_RAPIDAPI_KEY=

# ============================================
# 外部 API 端点配置
# ============================================

# Telegram 电话查询 API
TELEGRAM_PHONE_API_URL=http://47.253.47.192:8084/query-phone

# Google Email 查询 API
GOOGLE_EMAIL_API_URL=http://47.253.47.192:8002/api/email

# 印尼 API 服务 (9999 综合搜索)
INDONESIA_API_9999_URL=http://47.253.238.111:9999
